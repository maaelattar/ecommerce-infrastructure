# =============================================================================
# ECOMMERCE INFRASTRUCTURE - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and customize for your environment

# =============================================================================
# DEVELOPMENT PROFILE
# =============================================================================
TILT_PROFILE=backend

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ecommerce
POSTGRES_USER=ecommerce
POSTGRES_PASSWORD=ecommerce123

# Service-specific databases
USER_SERVICE_DB=user_service
PRODUCT_SERVICE_DB=product_service
ORDER_SERVICE_DB=order_service
PAYMENT_SERVICE_DB=payment_service
INVENTORY_SERVICE_DB=inventory_service
NOTIFICATION_SERVICE_DB=notification_service

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=ecommerce123

# =============================================================================
# MESSAGE BROKER CONFIGURATION
# =============================================================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=ecommerce
RABBITMQ_PASSWORD=ecommerce123
RABBITMQ_VHOST=ecommerce

# =============================================================================
# SEARCH ENGINE CONFIGURATION
# =============================================================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# =============================================================================
# AWS CONFIGURATION (LocalStack for development)
# =============================================================================
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# Cognito (populated by LocalStack initialization)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_REGION=us-east-1

# S3 Buckets
S3_PRODUCT_IMAGES_BUCKET=ecommerce-product-images
S3_USER_AVATARS_BUCKET=ecommerce-user-avatars
S3_DOCUMENTS_BUCKET=ecommerce-documents
S3_STATIC_ASSETS_BUCKET=ecommerce-static-assets

# SQS Queues
SQS_USER_EVENTS_QUEUE=user-events
SQS_ORDER_EVENTS_QUEUE=order-events
SQS_PAYMENT_EVENTS_QUEUE=payment-events
SQS_INVENTORY_EVENTS_QUEUE=inventory-events
SQS_NOTIFICATION_EVENTS_QUEUE=notification-events
SQS_DLQ=ecommerce-dlq

# DynamoDB Tables
DYNAMODB_USER_SESSIONS_TABLE=user-sessions
DYNAMODB_SHOPPING_CARTS_TABLE=shopping-carts
DYNAMODB_ANALYTICS_EVENTS_TABLE=analytics-events
DYNAMODB_PRODUCT_ANALYTICS_TABLE=product-analytics

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_UI_URL=http://localhost:16686

# =============================================================================
# TRAEFIK CONFIGURATION
# =============================================================================
TRAEFIK_DASHBOARD_PORT=8080
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT=100

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
TILT_UI_PORT=10350
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGS=true